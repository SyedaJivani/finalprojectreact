<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("./include/head"); %>
</head>
<header>
    
    <%- include ("./include/header"); %>
</header>
<body>
    <h1>Item List</h1>
<table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>category</th>
                <th>menu</th>
                <th>price</th>
                <th>edit/delete</th>
               
            </tr>
        </thead>
        <tbody>
            <% for(let user of userData){ %>
                  
                <tr>
                    <td>
                        <%= user._id%>
                    </td>
                    <td>
                        <%= user.category%>
                    </td>
                    <td>
                        <%= user.menu %>
                    </td>
                    <td>
                        <%= user.price %>
                    </td>
                   
                    <td>
                        <a href="http://localhost:8000/update/<%=user._id%>" class="edit"
                            data-toggle="modal">Edit</a>
                        <a href="http://localhost:8000/delete/<%=user._id%>" class="delete">Delete</i></a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>

</body>
</html>